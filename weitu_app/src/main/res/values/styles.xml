<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 页面淡入淡出主题 -->
    <style name="my_theme_style_fade" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/my_animation_activity_style_fade</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 页面淡入淡出动画 -->
    <style name="my_animation_activity_style_fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/open_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/close_exit_anim</item>
    </style>

    <!-- 视图一般样式 -->
    <style name="my_layout_style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/layout_bg</item>
    </style>

    <!-- 视图内容栏布局样式(四边有外间隔) -->
    <style name="my_layout_content_margin_style" parent="@android:style/Widget">
        <item name="android:layout_marginTop">@dimen/margin_top_size_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
    </style>

    <!-- 视图内容栏布局样式(上下有外间隔) -->
    <style name="my_layout_content_margin_style_top_bottom" parent="@android:style/Widget">
        <item name="android:layout_marginTop">@dimen/margin_top_size_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size_default</item>
    </style>

    <!-- 视图内容栏布局样式(四边有内间隔) -->
    <style name="my_layout_content_padding_style" parent="@android:style/Widget">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <!-- 视图内容栏布局样式（上下有内间隔） -->
    <style name="my_layout_content_padding_style_top_bottom" parent="@android:style/Widget">
        <item name="android:paddingTop">@dimen/padding_top_size_default</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_size_default</item>
    </style>

    <!-- 视图内容列表子项布局普通样式 -->
    <style name="my_layout_content_listitem_style_common" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listview_item_height_small</item>
        <item name="android:background">@drawable/layout_item_bg_with_stroke</item>
    </style>

    <!-- 列表子项主题文字样式 -->
    <style name="my_listview_item_theme_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <!-- 列表子项内容文字样式 -->
    <style name="my_listview_item_detail_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_second</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/text_fontsize_small</item>
    </style>

    <!-- 视图顶部导航栏默认布局样式 -->
    <style name="my_layout_navigationbar_style_default" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigationbar_layout_height</item>
        <item name="android:background">@color/layout_navigationbar_bg</item>
    </style>

    <!-- 视图顶部导航栏标题文字标签样式 -->
    <style name="my_navigationbar_title_text_style" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_fontsize_large</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <!-- 视图顶部导航栏普通样式 -->
    <style name="my_navigationbar_item_style_common" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/navigationbar_item_menu_width</item>
        <item name="android:layout_height">@dimen/navigationbar_layout_height</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/navigationbar_item_clicked_bg</item>
    </style>

    <!-- 视图顶部导航栏文字菜单按钮样式 -->
    <style name="my_navigationbar_item_style_textmenu" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_color_navigation_item_selector</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <!-- 视图顶部按钮样式(返回) -->
    <style name="my_navigationbar_item_style_back" parent="@style/my_navigationbar_item_style_common">
        <item name="android:src">@drawable/arrow_back</item>
    </style>


    <!-- 视图顶部按钮样式(通知) -->
    <style name="my_navigationbar_item_style_notice" parent="@style/my_navigationbar_item_style_common">
        <item name="android:src">@drawable/alarm</item>
    </style>

    <!-- 视图顶部按钮样式(扫码) -->
    <style name="my_navigationbar_item_style_scanqrcode" parent="@style/my_navigationbar_item_style_common">
        <item name="android:src">@drawable/scan_qrcode</item>
    </style>

    <!-- 视图顶部按钮样式(设置) -->
    <style name="my_navigationbar_item_style_setting" parent="@style/my_navigationbar_item_style_common">
        <item name="android:src">@drawable/setting</item>
    </style>

    <!-- 默认列表样式（平角透明底带分隔线） -->
    <style name="my_listview_style_default" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/divide_line_common</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/item_clicked_background</item>
    </style>

    <!-- 带边框线列表样式（平角白底带边框线与分隔线） -->
    <style name="my_listview_style_with_stroke" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/layout_bg_with_stroke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/divide_line_common</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@drawable/item_clicked_background</item>
    </style>

    <!-- 视图横向分割线样式 -->
    <style name="my_divide_line_style_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.49dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- 视图分割段布局样式(默认) -->
    <style name="my_divide_layout_view_style_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_divide_height_default</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- 视图分割段布局样式(大号) -->
    <style name="my_divide_layout_view_style_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_divide_height_large</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- logo样式(默认) -->
    <style name="my_logo_style_default" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/logo_size_default</item>
        <item name="android:layout_height">@dimen/logo_size_default</item>
        <item name="android:src">@drawable/normal_head</item>
    </style>

    <!-- logo样式(小号) -->
    <style name="my_logo_style_small" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/logo_size_small</item>
        <item name="android:layout_height">@dimen/logo_size_small</item>
        <item name="android:src">@drawable/normal_head</item>
    </style>

    <!-- logo样式(大号) -->
    <style name="my_logo_style_large" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/logo_size_large</item>
        <item name="android:layout_height">@dimen/logo_size_large</item>
        <item name="android:src">@drawable/normal_head</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="TranDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="page_title_str">
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
        <item name="android:textColor">@color/title_str_color</item>
    </style>

    <style name="page_title">
        <item name="android:layout_height">@dimen/navigationbar_layout_height</item>
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="content">
        <item name="android:background">@color/content_color</item>
    </style>

    <style name="dialog_fragment_fade_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_fragment_fadein</item>
        <item name="android:windowExitAnimation">@anim/dialog_fragment_fadeout</item>
    </style>

    <style name="dialog_left_right_anim">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="login_btn_style">
        <item name="android:background">@color/maincolor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <style name="registor_btn_style">
        <item name="android:background">@drawable/capton_bg</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <style name="login_input_style">
        <item name="android:layout_margin">4dip</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <style name="login_text_style">
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
        <item name="android:textColor">#396ecf</item>
    </style>

    <style name="reg_btn_style">
        <item name="android:background">@null</item>
        <item name="android:textColor">#396ecf</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <style name="bottom_radio_item">
        <item name="android:textSize">@dimen/text_fontsize_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_radio_selector</item>
        <item name="android:paddingTop">15dip</item>
    </style>

    <style name="user_center_top">
        <item name="android:padding">8dip</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="user_center_center">
        <item name="android:padding">8dip</item>
    </style>

    <style name="user_me_style">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <style name="dialog_btn_style">
        <item name="android:textColor">@color/label_color_selector</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
        <item name="android:background">@drawable/listview_item_selector</item>
    </style>

    <style name="photo_dialog_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="book_label_favorite">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_fontsize_small</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="book_favorite">
        <item name="android:textColor">@color/favorate_text</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="indicate_head">
        <item name="android:paddingTop">11dip</item>
        <item name="android:paddingBottom">11dip</item>
    </style>

    <style name="start_btn_style">
        <item name="android:background">@drawable/white_radio</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <style name="main_button_item">
        <item name="android:padding">8dip</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="score_ratingbar_icon" parent="@android:attr/radioButtonStyle">
        <item name="android:progressDrawable">@drawable/max_ratingbar</item>
    </style>

    <style name="player_seek_style" parent="android:Widget.SeekBar">
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:progressDrawable">@drawable/layer_seek_progress</item>
        <item name="android:indeterminateDrawable">@drawable/layer_seek_progress</item>
        <item name="android:thumb">@drawable/seek_icon_control</item>
    </style>

    <style name="player_seek_style_big" parent="android:Widget.SeekBar">
        <item name="android:maxHeight">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:progressDrawable">@drawable/layer_seek_progress</item>
        <item name="android:indeterminateDrawable">@drawable/layer_seek_progress</item>
        <item name="android:thumb">@drawable/seek_icon_control</item>
    </style>

    <style name="main_tabhost_style" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:paddingTop">8dp</item>
        <!--<item name="android:paddingBottom">8dp</item>-->
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_main_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_tabhost_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_main_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layout_style_main">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="pull_right_pop_an">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumb">@drawable/seekbar</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="selecttypestyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/popwin_anim_style</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>