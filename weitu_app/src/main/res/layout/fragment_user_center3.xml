<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--屏蔽未显示-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        >

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user_center_banner"
            />

        <ImageView
            android:id="@+id/setting"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/setting"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:id="@+id/rl_login_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ImageView
                android:background="@drawable/normal_head"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_below="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="11"
                    />

                <ImageView
                    android:id="@+id/img_sex"
                    tools:background="@drawable/female"
                    android:layout_marginLeft="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/photo"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/library_name"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_name"
                android:background="@drawable/shape_user_school"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="华南农业大学"
                android:textSize="16sp"
                android:textColor="@color/grey3"
                />

        </RelativeLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_normal"
        android:background="@color/grey2"/>

    <!--<include layout="@layout/included_title3"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_upload_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_movie"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我上传的视频"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey7"
                />
            <LinearLayout
                android:id="@+id/ll_upload_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_file"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我上传的文档"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey7"
                />
            <LinearLayout
                android:id="@+id/ll_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_photo"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我上传的图库"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_normal"
                android:background="@color/grey2"
                />

            <LinearLayout
                android:id="@+id/collected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_collect"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我的收藏"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey7"/>
            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_comment"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我的评论"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey7"/>
            <LinearLayout
                android:id="@+id/ll_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_history"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我的历史"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey7"/>
            <LinearLayout
                android:id="@+id/left_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_advice"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="我有建议"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_normal"
                android:background="@color/grey2"
                />
            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_setting"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="设置"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>