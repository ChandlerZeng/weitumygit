<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/searchBackgroud"
    android:orientation="vertical">

    <include layout="@layout/included_title_comment" />


    <com.libtop.weitu.widget.listview.RemakeXListView
            android:id="@+id/list_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants"
            android:divider="#dadada"
            android:dividerHeight="1px"
            android:listSelector="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_left"
            android:layout_weight="1"
            android:background="@drawable/shape_search_title_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="发表评论"
                android:imeOptions="actionNone"
                android:inputType="textMultiLine"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/commit"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_left"
            android:background="@drawable/selector_comment_send"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/comment_send_text"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>
