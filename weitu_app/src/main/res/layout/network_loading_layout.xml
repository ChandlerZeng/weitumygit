<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:padding="@dimen/padding_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/network_loading_layout_empty_prompt_imageview"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/network_loading_layout_empty_prompt_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="@string/empty_data_prompt"
            android:textColor="@color/hint"
            android:textSize="@dimen/text_fontsize_normal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/network_loading_layout_retry_prompt_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="@string/network_error_and_touch_retry"
        android:textColor="@color/hint"
        android:textSize="@dimen/text_fontsize_normal"/>

    <ProgressBar
        android:id="@+id/network_loading_layout_progressbar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"/>

</RelativeLayout>