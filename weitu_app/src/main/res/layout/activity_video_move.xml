<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/line"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/exit"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/delete_icon"
            android:gravity="center|left"
            android:text="选择视频文件夹"/>

        <ListView
            android:id="@+id/select_type_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@null"
            android:scrollbars="none"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_new_folderBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_size_10">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding_size_10"
            android:background="@drawable/video_create_folder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/newFolder"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>