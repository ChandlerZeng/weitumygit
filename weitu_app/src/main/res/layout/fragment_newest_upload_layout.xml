<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/content">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleBar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newest_upload_btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="11dp"
            android:clickable="true"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="最新上传"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/newest_upload_search_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="5dp"
            android:src="@drawable/icon_serach" />

    </LinearLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/newest_upload_all"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="综合"
            android:textColor="@color/group_tap_textcolor_radiobutton" />

        <RadioButton
            android:id="@+id/newest_upload_books"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="图书"
            android:textColor="@color/group_tap_textcolor_radiobutton" />

        <RadioButton
            android:id="@+id/newest_upload_video"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/group_tap_textcolor_radiobutton" />
        <RadioButton
            android:id="@+id/newest_upload_audio"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="音频"
            android:textColor="@color/group_tap_textcolor_radiobutton" />
        <RadioButton
            android:id="@+id/newest_upload_document"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="文档"
            android:textColor="@color/group_tap_textcolor_radiobutton" />
        <RadioButton
            android:id="@+id/newest_upload_images"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/group_tap_btn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="图库"
            android:textColor="@color/group_tap_textcolor_radiobutton" />
    </RadioGroup>
    <com.libtop.weituR.widget.NoSlideViewPager
        android:id="@+id/newest_upload_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/transparent" />
</LinearLayout>