<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/titleBar"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/open_alarm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="11dp"
            android:src="@drawable/alarm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_bg_subject_alarm"
            android:gravity="center"
            android:padding="2dp"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_theme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/blackunder"
            android:gravity="center"
            android:text="主题"
            android:textColor="@color/grey3"
            android:textSize="@dimen/text_fontsize_middle"/>

        <View
            android:layout_width="38dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/btn_main_resource"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="资源"
            android:textColor="@color/grey4"
            android:textSize="@dimen/text_fontsize_middle"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/search_top"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="11dp"
        android:src="@drawable/search_icon2"/>
</LinearLayout>