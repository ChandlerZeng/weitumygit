<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="vertical"
        android:paddingBottom="12dip" >

        <TextView
            android:id="@+id/school_name"
            android:layout_width="fill_parent"
            android:layout_height="106dip"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dip"
            android:text="华南师范大学"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32" />

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="@dimen/input_height"
                android:layout_weight="1"
                android:background="@drawable/search_input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/speak"
                    android:layout_width="38dip"
                    android:layout_height="30dip"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/white_search" />

                <TextView
                    style="@style/target_edit"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:enabled="false"
                    android:text="@string/input_book_name"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="fill_parent"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/white_speak" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/diabetes_listener"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_line" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线咨询" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/evaluate_self"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_activity" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精彩活动" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_favorate"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_favorate" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/my_pre"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_custom" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的预约" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/i_want"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_want" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我想看" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/see_pre"
                style="@style/main_button_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/main_item_bg"
                    android:layout_height="@dimen/main_item_bg"
                    android:src="@drawable/icon_seepre" />

                <TextView
                    style="@style/main_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我看过" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>