<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#00000000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <ProgressBar
            android:id="@+id/pgsBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_color"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:background="#00000000"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/see"
                android:layout_gravity="center"
                android:layout_width="58dp"
                android:layout_height="70dp"
                android:layout_margin="@dimen/padding_medium"
                android:background="@drawable/pdf"
                android:scaleType="centerCrop"
                />


            <LinearLayout
                android:id="@+id/go_pro"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/padding_normal"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:textColor="@color/grey3"
                    android:text="javacheng"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/grey4"
                    android:text="1970/01/11"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/main_text"
                    android:text="状态:新创建"
                    android:textSize="@dimen/smalll"
                    />
            </LinearLayout>

            <ImageButton
                android:layout_marginTop="@dimen/padding_normal"
                android:id="@+id/imgBtn_video_choice"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/video_choice_selector"
                android:focusable="false"/>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        />
</LinearLayout>
