<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_container"
        style="@style/my_layout_navigationbar_style_default"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/my_navigationbar_item_style_back"/>

        <TextView
            android:id="@+id/title"
            style="@style/my_navigationbar_title_text_style"
            android:layout_marginRight="@dimen/navigationbar_item_menu_width"
            tools:text="页面标题"/>
    </LinearLayout>

    <View style="@style/my_divide_line_style_horizontal"/>
</LinearLayout>