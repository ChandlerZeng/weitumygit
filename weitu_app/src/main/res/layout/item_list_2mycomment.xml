<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_normal"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/check_layout"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <CheckBox
            android:id="@+id/checkmark"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@null"
            android:button="@drawable/check_btn"
            android:checked="false"
            android:paddingLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginTop="@dimen/padding_normal"
        android:text="【图书】java web开发"
        />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_title"
        android:layout_margin="@dimen/padding_normal"
        android:background="@drawable/normal_head"
        />

    <TextView
        android:id="@+id/tv_commnet"
        android:layout_toRightOf="@+id/img_head"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="华南大学周老师:这份资料很有用。"
        />

    <TextView
        android:id="@+id/tv_commnet2"
        android:layout_toRightOf="@+id/img_head"
        android:layout_below="@+id/tv_commnet"
        android:layout_margin="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ABC:这份资料很有用。"
        android:background="#f5f5f5"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commnet2"
        android:layout_marginRight="@dimen/padding_normal"
        android:layout_alignParentRight="true"
        tools:text="2015/11/10"
        android:textColor="@color/grey4"
        />
    </RelativeLayout>

</LinearLayout>