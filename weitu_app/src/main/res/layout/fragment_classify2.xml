<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/searchBackgroud"
    android:orientation="vertical">

    <include layout="@layout/included_title1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/my_layout_style_common">

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/main_divider_line"
            android:dividerHeight="0.8dip"
            android:fastScrollEnabled="false"
            android:listSelector="@drawable/list_selector"/>

        <include layout="@layout/content_layout_network_loading" />

    </FrameLayout>

</LinearLayout>