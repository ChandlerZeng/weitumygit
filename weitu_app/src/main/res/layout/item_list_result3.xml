<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00000000"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/check_layout"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <CheckBox
                android:id="@+id/checkmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@drawable/check_btn"
                android:checked="false"
                android:paddingLeft="5dp"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fra_one"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#ebebeb"
            >

            <ImageView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="#66000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/doc_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/docli"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0M"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fra_two"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#ebebeb"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/see2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/go_pro"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:gravity="center|left"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/doc_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="#333333"
                android:textSize="15sp"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/green1"
                android:gravity="center|left"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="暂无分类"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/doc_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:textColor="#666666"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/doc_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:gravity="top"
                android:text="时间:2016/06/01"
                android:textColor="#333333"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/doc_introduction"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="3"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divider"
        />
</LinearLayout>
