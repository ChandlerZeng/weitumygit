<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/my_layout_style_common"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_center_banner"/>

        <ImageView
            android:id="@+id/setting"
            style="@style/my_navigationbar_item_style_setting"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_small"/>

        <RelativeLayout
            android:id="@+id/rl_login_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/photo"
                style="@style/my_logo_style_large"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_tiny"/>

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_fontsize_middle"/>

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_tiny"
                    android:layout_weight="0"
                    android:src="@drawable/male"/>
            </LinearLayout>

            <TextView
                android:id="@+id/library_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/shape_user_school"
                android:paddingBottom="3dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="3dp"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_fontsize_normal"/>
        </RelativeLayout>
    </FrameLayout>

    <View style="@style/my_divide_layout_view_style_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/ll_upload_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_movie"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="我上传的视频"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/ll_upload_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_file"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="我上传的文档"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/ll_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_photo"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="我上传的图库"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <View style="@style/my_divide_layout_view_style_default"/>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/ll_my_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_like"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="我赞过的"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_comment"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="我的评论"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <View style="@style/my_divide_layout_view_style_default"/>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/left_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_advice"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="反馈"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_setting"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_size_10"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrows_right"/>
            </LinearLayout>

            <View style="@style/my_divide_line_style_horizontal"/>
            <View style="@style/my_divide_line_style_horizontal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>