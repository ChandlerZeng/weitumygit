<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/home_img_size"
            android:layout_height="@dimen/home_img_size"
            android:background="@drawable/selector_main_home"/>

        <TextView
            android:id="@+id/tv_home"
            android:textColor="@drawable/selector_main_text"
            style="@style/main_tabhost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab_mian"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_clazz"
            android:layout_width="@dimen/home_img_size"
            android:layout_height="@dimen/home_img_size"
            android:background="@drawable/selector_main_discover"/>

        <TextView
            android:id="@+id/tv_clazz"
            android:textColor="@drawable/selector_main_text"
            style="@style/main_tabhost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_discover"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_personal"
            android:layout_width="@dimen/home_img_size"
            android:layout_height="@dimen/home_img_size"
            android:background="@drawable/selector_main_personal"/>

        <TextView
            android:id="@+id/tv_personal"
            android:textColor="@drawable/selector_main_text"
            style="@style/main_tabhost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab_personal"/>
    </LinearLayout>
</LinearLayout>